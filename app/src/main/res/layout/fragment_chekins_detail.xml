<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
<include layout="@layout/include_header_shadow"/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="25dp"
		android:layout_marginTop="19dp">

		<TextView
			android:id="@+id/tv_class_type_fragment_checkins_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textSize="15sp"
		    android:textStyle="bold"
		    android:textColor="@color/likeBlack"
		    android:text="公开课:"
			/>

		<TextView
			android:id="@+id/tv_class_name_fragment_checkins_detail"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textSize="15sp"
		    android:textStyle="bold"
		    android:textColor="@color/likeBlack"
		    tools:text="公开课:"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="18sp"
	    android:layout_marginLeft="25dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textColor="@color/shadowGray"
		    android:text="主讲人:"
		    android:textSize="11sp"
			/>
		<TextView
			android:id="@+id/tv_host_name_fragment_checkins_detail"
			android:paddingLeft="7dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textColor="@color/shadowGray"
			android:text="李雷"
		    android:textSize="11sp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="3sp"
	    android:layout_marginLeft="25dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textColor="@color/shadowGray"
			android:text="时    间:"
		    android:textSize="11sp"
			/>
		<TextView
			android:id="@+id/tv_time_fragment_checkins_detail"
			android:paddingLeft="7dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textColor="@color/shadowGray"
			android:text="2016-11-12 13:00"
		    android:textSize="11sp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="3sp"
	    android:layout_marginLeft="25dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textColor="@color/shadowGray"
		    android:text="校    区:"
		    android:textSize="11sp"
			/>
		<TextView
			android:id="@+id/tv_school_fragment_checkins_detail"
			android:paddingLeft="7dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textColor="@color/shadowGray"
			android:text="小和山校区"
		    android:textSize="11sp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="3sp"
	    android:layout_marginLeft="25dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textColor="@color/shadowGray"
		    android:text="地    点:"
		    android:textSize="11sp"
			/>
		<TextView
			android:id="@+id/tv_address_fragment_checkins_detail"
			android:paddingLeft="7dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textColor="@color/shadowGray"
			android:text="逸夫楼第二报告厅南山阶梯教室"
		    android:textSize="11sp"
			/>
	</LinearLayout>
	<ImageView
		android:layout_marginTop="20dp"
		android:layout_width="match_parent"
		android:layout_height="10dp"
	    android:background="@mipmap/mask"
		/>

	<android.support.design.widget.TabLayout
		android:layout_marginLeft="35dp"
		android:layout_marginRight="35dp"
		android:id="@+id/tab_fragment_checkins_detail"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		app:tabTextColor="@color/shadowGray"
		app:tabIndicatorColor="@color/blueButton"

		app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"
	    app:tabSelectedTextColor="@color/blueButton"
		/>
	<android.support.v4.view.ViewPager
		android:id="@+id/vp_fragment_checkins_detail"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		/>

</LinearLayout>