<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/include_header_shadow"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/aboutus_logo2x"/>
        <TextView
            android:id="@+id/tv_version_name_fragment_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/blue"
            android:text="版本号: 1.0"/>
</LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        style="@style/style_line_gray"/>
    <LinearLayout
        android:id="@+id/ll_customer_server_fragment_about_us"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服热线"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/likeBlack"/>
        <TextView
            android:id="@+id/tv_phone_fragment_about_us"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4000-1111-1111"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="@color/likeBlack"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/mine_next"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        style="@style/style_line_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="12dp"
        android:text="公司介绍"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/likeBlack"/>
    <TextView
        android:id="@+id/tv_company_info_fragment_about_us"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/likeBlack"
        android:text="一般经营项目：教育软件，计算机软件的技术开发，技术服务，成果转让；教育信息咨询。"/>

</LinearLayout>

</ScrollView>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/shadowGray"
        android:text="Copyright @ 2015-2016"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/shadowGray"
        android:text="浙江亿乾教育版权所有"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"/>
</LinearLayout>