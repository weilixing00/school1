<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/include_header_noshadow"/>
<android.support.design.widget.TabLayout
    android:id="@+id/tab_fragment_lectures"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    app:tabSelectedTextColor="@color/blueButton"
    app:tabTextColor="@color/shadowGray"
    app:tabIndicatorColor="@color/blueButton"
    app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
    />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_lectures"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>