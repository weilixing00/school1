<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/include_header_shadow"/>
    <EditText
        android:id="@+id/et_fragment_project_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="请输入项目内容"
        android:textColorHint="@color/shadowGray"
        android:textSize="15sp"
        android:maxLength="100"
        android:maxLines="10"
        android:background="@null"
        android:textColor="@color/likeBlack"/>
    <TextView
        android:id="@+id/tv_fragment_project_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:textSize="13sp"
        android:textColor="@color/shadowGray"
        android:text="0/100字"/>
</LinearLayout>