<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@drawable/bg_item_shadow_round"
	android:orientation="vertical"
	>
	
	<TextView
		android:id="@+id/tv_title_item_erv_fragment_school_activity"
		android:layout_width="wrap_content"
		android:layout_height="43dp"
		android:paddingLeft="13dp"
		android:paddingRight="13dp"
		android:gravity="center_vertical"
		android:textColor="@color/blueButton"
		android:textSize="15sp"
		tools:text="活动标题"
		/>
	<com.makeramen.roundedimageview.RoundedImageView
		android:id="@+id/iv_item_erv_fragment_school_activity"
		android:layout_width="match_parent"
		android:layout_height="140dp"
	    android:src="@mipmap/lunbotu"
		android:scaleType="fitXY"
		android:layout_marginLeft="13dp"
		android:layout_marginRight="13dp"
	    android:layout_marginBottom="15dp"
		app:riv_corner_radius="8dp"
		app:riv_mutate_background="true"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
		android:paddingLeft="13dp"
		android:paddingRight="13dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:text="时间 :"
		    android:textSize="11sp"
		    android:textColor="@color/deepGray"
			/>
		<TextView
			android:id="@+id/tv_date_item_erv_fragment_school_activity"
			android:layout_marginLeft="6dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    tools:text="日期"
		    android:textSize="11sp"
		    android:textColor="@color/deepGray"
			/>
		<TextView
			android:id="@+id/tv_time_item_erv_fragment_school_activity"
			android:layout_marginLeft="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    tools:text="时间"
		    android:textSize="11sp"
		    android:textColor="@color/deepGray"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
	    android:orientation="horizontal"
		android:paddingLeft="13dp"
		android:paddingRight="13dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:text="地点 :"
		    android:textSize="11sp"
		    android:textColor="@color/deepGray"
			/>
		<TextView
			android:id="@+id/tv_address_item_erv_fragment_school_activity"
			android:layout_marginLeft="6dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    tools:text="地点"
		    android:textSize="11sp"
		    android:textColor="@color/deepGray"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
	    android:orientation="horizontal"
		android:paddingLeft="13dp"
		android:paddingRight="13dp"
	    android:layout_marginBottom="15dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:text="主办方 :"
		    android:textSize="11sp"
		    android:textColor="@color/deepGray"
			/>
		<TextView
			android:id="@+id/tv_host_item_erv_fragment_school_activity"
			android:layout_marginLeft="6dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    tools:text="主办方"
		    android:textSize="11sp"
		    android:textColor="@color/deepGray"
			/>
	</LinearLayout>
</LinearLayout>