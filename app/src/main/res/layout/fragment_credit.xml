<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#fff"
	android:orientation="vertical"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="305dp"
		android:background="@mipmap/credit_background2x"
	    android:orientation="vertical"
		>

		<ImageView
			android:id="@+id/iv_back_fragment_credit"
			style="@style/style_iv_back"
			android:src="@mipmap/mine_back2x"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="8dp"
			android:text="总学分"
			android:textColor="#fff"
			android:textSize="15sp"
			/>

		<FrameLayout
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_gravity="center_horizontal"
			>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="horizontal"
				>

				<TextView
					android:id="@+id/tv_credit_total_fragment_credit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="10"
					android:textColor="@color/blueButton"
					android:textSize="47sp"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="分"
					android:textColor="@color/blueButton"
					android:textSize="25sp"
					/>
			</LinearLayout>

			<ImageView

				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@mipmap/credit_totalscore3x"
				android:id="@+id/iv_total_fragment_credit"
				/>
		</FrameLayout>
	</LinearLayout>
<LinearLayout
android:id="@+id/ll_credit_askfor_fragment_credit"
	android:layout_width="match_parent"
	android:layout_height="65dp"
	android:orientation="horizontal"
	android:layout_marginLeft="20dp"
	android:layout_marginRight="15dp"
	android:gravity="center_vertical">
	<ImageView
		android:layout_width="22dp"
		android:layout_height="22dp"
	    android:background="@mipmap/credit_apply"
		/>
	<TextView
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
	    android:text="学分申请"
	    android:textColor="@color/likeBlack"
	    android:textSize="15sp"
	    android:layout_marginLeft="8dp"
		/>
	<ImageView
		android:layout_width="22dp"
		android:layout_height="22dp"
		android:src="@mipmap/mine_next"
		/>

</LinearLayout>
<View
	android:layout_marginLeft="22dp"
	android:layout_marginRight="15dp"
	style="@style/style_line_gray"/>
	<LinearLayout
		android:id="@+id/ll_askfor_record_fragment_credit"
	android:layout_width="match_parent"
	android:layout_height="65dp"
	android:orientation="horizontal"
	android:layout_marginLeft="20dp"
	android:layout_marginRight="15dp"
	android:gravity="center_vertical">
	<ImageView
		android:layout_width="22dp"
		android:layout_height="22dp"
	    android:background="@mipmap/credit_record"
		/>
	<TextView
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
	    android:text="申请记录"
	    android:textColor="@color/likeBlack"
	    android:textSize="15sp"
	    android:layout_marginLeft="8dp"
		/>
	<ImageView
		android:layout_width="22dp"
		android:layout_height="22dp"
	    android:src="@mipmap/mine_next"
		/>
</LinearLayout>
<View
	android:layout_marginLeft="22dp"
	android:layout_marginRight="15dp"
	style="@style/style_line_gray"/>

</LinearLayout>