<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="23dp"
		android:background="@drawable/bg_item_shadow_round"
		android:orientation="vertical"
		>
		<LinearLayout
			android:layout_marginLeft="15dp"
			android:layout_marginTop="15dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:text="项目名称            "
			    android:textColor="@color/shadowGray"
			    android:textSize="13sp"
				/>
			<TextView
				android:id="@+id/tv_project_name_item_erv_fragment_national_contest"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:text="项目名称"
			    android:textColor="@color/likeBlack"
			    android:textSize="13sp"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_marginLeft="15dp"
			android:layout_marginTop="8dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:text="项目内容或登记"
			    android:textColor="@color/shadowGray"
			    android:textSize="13sp"
				/>
			<TextView
				android:id="@+id/tv_content_item_erv_fragment_national_contest"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:text="项目名称"
			    android:textColor="@color/likeBlack"
			    android:textSize="13sp"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_marginLeft="15dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="15dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:text="适用年纪            "
			    android:textColor="@color/shadowGray"
			    android:textSize="13sp"
				/>
			<TextView
				android:id="@+id/tv_grade_item_erv_fragment_national_contest"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:text="项目名称"
			    android:textColor="@color/likeBlack"
			    android:textSize="13sp"
				/>
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:id="@+id/iv_applyfor_item_erv_fragment_national_contest"
		android:layout_marginRight="5dp"
		android:layout_width="48dp"
		android:layout_height="48dp"
	    android:background="@mipmap/competitionlist_apply2x"
	    android:layout_gravity="right|center_vertical"
		/>
</FrameLayout>