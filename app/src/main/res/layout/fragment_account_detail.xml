<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:id="@+id/root_main_fragment_account_detail"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
<include layout="@layout/include_header_shadow"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="65dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
		>
<TextView
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
    android:text="头像"
    android:textSize="15sp"
    android:textColor="@color/likeBlack"
	/>

		<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/iv_head_icon_fragment_account_detail"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:src="@mipmap/account_head"
			android:scaleType="fitCenter"
			app:riv_corner_radius="0dip"
			app:riv_oval="true"
			/>
	</LinearLayout>

	<View
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		style="@style/style_line_gray"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="65dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="昵称"
			android:textSize="15sp"
			android:textColor="@color/likeBlack"
			/>
		<TextView
			android:id="@+id/tv_nickname_fragment_account_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:text="不超过10个字符"
		    android:textColor="@color/shadowGray"
		    android:textSize="15sp"
			/>
	</LinearLayout>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="10dp"
	    android:background="@mipmap/mask"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:text="个人信息"
	    android:textSize="17sp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginTop="25dp"
	    android:textColor="@color/likeBlack"
		/>
	<TextView
		android:id="@+id/tv_name_fragment_account_detail"
		android:layout_marginLeft="49dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    tools:text="吴**"
	    android:textColor="@color/likeBlack"
	    android:textSize="15sp"
	    android:layout_marginTop="25dp"
		/>
	<TextView
		android:id="@+id/tv_sex_fragment_account_detail"
		android:layout_marginLeft="49dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    tools:text="男"
	    android:textColor="@color/likeBlack"
	    android:textSize="15sp"
	    android:layout_marginTop="25dp"
		/>
	<TextView
		android:id="@+id/tv_school_fragment_account_detail"
		android:layout_marginLeft="49dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    tools:text="浙江理工大学"
	    android:textColor="@color/likeBlack"
	    android:textSize="15sp"
	    android:layout_marginTop="25dp"
		/>
	<TextView
		android:id="@+id/tv_class_fragment_account_detail"
		android:layout_marginLeft="49dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    tools:text="班级"
	    android:textColor="@color/likeBlack"
	    android:textSize="15sp"
	    android:layout_marginTop="25dp"
		/>
	<TextView
		android:id="@+id/tv_date_fragment_account_detail"
		android:layout_marginLeft="49dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    tools:text="时间"
	    android:textColor="@color/likeBlack"
	    android:textSize="15sp"
	    android:layout_marginTop="25dp"
		/>
	<TextView
		android:id="@+id/tv_address_fragment_account_detail"
		android:layout_marginLeft="49dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    tools:text="地址"
	    android:textColor="@color/likeBlack"
	    android:textSize="15sp"
	    android:layout_marginTop="25dp"
		/>
</LinearLayout>