<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:descendantFocusability="blocksDescendants"
	>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="35dp"
		android:background="@drawable/bg_item_shadow_round"
		>

		<TextView
			android:id="@+id/tv_title_item_erv_item_fragment_lecture_projects"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="15dp"
			android:textColor="@color/blueButton"
			android:textSize="15sp"
			android:textStyle="bold"
			tools:text="考研数学备考"
			/>

		<TextView
			android:id="@+id/tv_name_item_erv_item_fragment_lecture_projects"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_title_item_erv_item_fragment_lecture_projects"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="7dp"
			android:text="李磊"
			android:textColor="@color/likeBlack"
			android:textSize="15sp"
			/>

		<TextView
			android:id="@+id/tv_time_item_erv_item_fragment_lecture_projects"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_name_item_erv_item_fragment_lecture_projects"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="14dp"
			android:text="2016-12-05 09:50"
			android:textColor="@color/shadowGray"
			android:textSize="13sp"

			/>

		<TextView
			android:id="@+id/tv_school_area_item_erv_item_fragment_lecture_projects"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_time_item_erv_item_fragment_lecture_projects"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="7dp"
			android:text="小河山校区"
			android:textColor="@color/shadowGray"
			android:textSize="13sp"
			/>

		<TextView
			android:id="@+id/tv_school_major_item_erv_item_fragment_lecture_projects"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_school_area_item_erv_item_fragment_lecture_projects"
			android:layout_marginBottom="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="6dp"
			android:text="浙江科技学院数字媒体学院"
			android:textColor="@color/shadowGray"
			android:textSize="13sp"
			/>

		<TextView
			android:id="@+id/tv_count_item_erv_item_fragment_lecture_projects"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@id/tv_school_area_item_erv_item_fragment_lecture_projects"
			android:layout_marginBottom="15dp"
			android:layout_marginRight="45dp"
			android:layout_marginTop="6dp"
			android:text="130/200"
			android:textColor="@color/shadowGray"
			android:textSize="13sp"
			/>

	</RelativeLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|right"
		android:layout_marginRight="14dp"
		android:gravity="center"
		android:orientation="vertical"
		>

		<ImageView
			android:id="@+id/iv_book_item_erv_item_fragment_lecture_projects"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_gravity="right|bottom"
			android:focusable="false"
			android:clickable="true"
			android:background="@mipmap/lecture_reserve2x"
			/>

		<ImageView
			android:id="@+id/iv_edit_item_erv_item_fragment_lecture_projects"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_gravity="right|bottom"
			android:layout_marginBottom="7dp"
			android:focusable="false"
			android:clickable="true"

			android:background="@mipmap/lecture_edit2x"
			/>

	</LinearLayout>
</FrameLayout>