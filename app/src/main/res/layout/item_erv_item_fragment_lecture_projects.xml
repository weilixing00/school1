<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginRight="35dp"
	android:layout_marginLeft="10dp"
	android:background="@drawable/bg_item_shadow_round"
	>

	<TextView
		android:id="@+id/tv_title_item_erv_item_fragment_lecture_projects"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="15dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="考研数学备考"
		android:textColor="@color/blueButton"
		android:textSize="15sp"
		android:textStyle="bold"
		/>
	<TextView
		android:id="@+id/tv_name_item_erv_item_fragment_lecture_projects"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_title_item_erv_item_fragment_lecture_projects"
		tools:text="李磊"
		android:textSize="15sp"
		android:textColor="@color/likeBlack"
		android:layout_marginTop="7dp"
		android:layout_marginLeft="15dp"
		/>
	<TextView
		android:id="@+id/tv_time_item_erv_item_fragment_lecture_projects"
		android:layout_below="@id/tv_name_item_erv_item_fragment_lecture_projects"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="2006"
		android:textColor="@color/shadowGray"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="14dp"
		android:textSize="13sp"

		/>
	<TextView
		android:id="@+id/tv_school_area_item_erv_item_fragment_lecture_projects"
		android:layout_below="@id/tv_time_item_erv_item_fragment_lecture_projects"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="校区"
		android:textSize="13sp"
		android:textColor="@color/shadowGray"
		android:layout_marginTop="7dp"
		android:layout_marginLeft="15dp"
		/>
	<TextView
		android:id="@+id/tv_school_major_item_erv_item_fragment_lecture_projects"
		android:layout_below="@id/tv_school_area_item_erv_item_fragment_lecture_projects"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="校区"
		android:textSize="13sp"
		android:textColor="@color/shadowGray"
		android:layout_marginTop="6dp"
		android:layout_marginLeft="15dp"
		android:layout_marginBottom="15dp"
		/>
	<TextView
		android:id="@+id/tv_count_item_erv_item_fragment_lecture_projects"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/shadowGray"
		android:layout_below="@id/tv_school_area_item_erv_item_fragment_lecture_projects"
		android:textSize="13sp"
		android:layout_alignParentRight="true"
		android:layout_marginTop="6dp"
		android:layout_marginRight="45dp"
		android:layout_marginBottom="15dp"
		android:text="100/500"
		/>

</RelativeLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|right"
		android:layout_marginRight="14dp"
		android:gravity="center"
		android:orientation="vertical">
	<ImageView
		android:id="@+id/iv_book_item_erv_item_fragment_lecture_projects"

		android:layout_width="48dp"
		android:layout_height="48dp"
		android:background="@mipmap/lecture_edit2x"
		android:layout_gravity="right|bottom"
	    android:layout_marginBottom="7dp"
		/>
	<ImageView
		android:id="@+id/iv_edit_item_erv_item_fragment_lecture_projects"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:background="@mipmap/lecture_reserve2x"
		android:layout_gravity="right|bottom"
		/>
	</LinearLayout>
</FrameLayout>