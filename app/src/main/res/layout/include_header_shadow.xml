<?xml version="1.0" encoding="utf-8"?>

<!--tools:showIn="@layout/fragment_login"-->
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout_header"
	android:layout_width="match_parent"
	android:layout_height="55dp"

	android:orientation="horizontal"
	>

	<ImageView
		android:id="@+id/iv_back_header"
		android:layout_width="22dp"
		android:layout_height="22dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="15dp"
		android:src="@mipmap/index_back2x"
		/>

	<TextView
		android:id="@+id/tv_middle_header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:textColor="@color/likeBlack"
		android:textSize="18sp"
		android:textStyle="bold"
		tools:text="标题"
		/>

	<TextView
		android:id="@+id/tv_right_header_shadow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="15dp"
		android:textColor="@color/likeBlack"
		android:textSize="15sp"
		tools:text="完成"
		/>
	<ImageView
		android:layout_alignParentBottom="true"
		android:layout_width="match_parent"
		android:layout_height="10dp"
		android:background="@mipmap/mask"
		/>
</RelativeLayout>