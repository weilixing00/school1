<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:background="@drawable/bg_item_shadow_round"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginLeft="15dp"
	    android:layout_marginTop="15dp"
		>
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
    android:text="哈佛大学公开课:"
    android:textSize="17sp"
    android:textStyle="bold"
    android:textColor="@color/blueButton"
	/>
<TextView
	android:layout_marginLeft="8dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	tools:text="哈佛大学公开课:"
    android:textSize="17sp"
    android:textStyle="bold"
    android:textColor="@color/blueButton"
	/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="16dp"
	    android:layout_marginLeft="15dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:text="主讲人:"
		    android:textColor="@color/shadowGray"
		    android:textSize="11sp"
			/>
		<TextView
			android:id="@+id/tv_host_tecther_item_erv_fragment_checkins"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    tools:text="主讲人:"
		    android:textColor="@color/shadowGray"
		    android:textSize="11sp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="4dp"
	    android:layout_marginLeft="15dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:text="时    间:"
		    android:textColor="@color/shadowGray"
		    android:textSize="11sp"
			/>
		
		<TextView
			android:id="@+id/tv_date_item_erv_fragment_checkins"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="日期"
		    android:textColor="@color/shadowGray"
		    android:textSize="11sp"
			/>
		
		<TextView
			android:id="@+id/tv_time_item_erv_fragment_checkins"
			android:layout_marginLeft="8dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="时间"
		    android:textColor="@color/shadowGray"
		    android:textSize="11sp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="15dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="校    区:"
			android:textColor="@color/shadowGray"
			android:textSize="11sp"
			/>
		<TextView
			android:id="@+id/tv_school_item_erv_fragment_checkins"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="校区:"
			android:textColor="@color/shadowGray"
			android:textSize="11sp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="15dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="地    点:"
			android:textColor="@color/shadowGray"
			android:textSize="11sp"
			/>
		<TextView
			android:id="@+id/tv_address_item_erv_fragment_checkins"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="地点:"
			android:textColor="@color/shadowGray"
			android:textSize="11sp"
			/>
	</LinearLayout>
<View
	android:layout_marginTop="7dp"
	android:layout_marginLeft="15dp"
	android:layout_marginRight="15dp"
	style="@style/style_line_gray"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="65dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="45dp"
	    android:layout_marginRight="15dp"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
		    android:text="上课"
		    android:textSize="18sp"
		    android:textColor="@color/likeBlack"
			/>
		<ImageView
			android:id="@+id/iv_signin_item_erv_fragment_checkins"
			android:layout_width="130dp"
			android:layout_height="45dp"
		    android:src="@mipmap/lecture_signin"
			/>
	</LinearLayout>
<View
	style="@style/style_line_gray"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="65dp"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:layout_marginLeft="45dp"
		android:layout_marginRight="15dp"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="下课"
			android:textSize="18sp"
			android:textColor="@color/likeBlack"
			/>
		<ImageView
			android:id="@+id/iv_signout_item_erv_fragment_checkins"
			android:layout_width="130dp"
			android:layout_height="45dp"
			android:src="@mipmap/lecture_signout"
			/>
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>

</LinearLayout>